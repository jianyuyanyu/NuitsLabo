{
  "$schema": "https://www.ricoh.co.jp/schemas/ridw/image-importer/unit/1.0.0",
  "type": "object",
  "properties": {
    "AttributeValues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [ "string", "int", "date" ]
          },
          "value": {
            "type": [ "string", "null" ],
            "oneOf": [
              { "type": "string" },
              { "type": "null" }
            ]
          }
        },
        "required": [ "name", "type", "value" ],
        "allOf": [
          {
            "if": {
              "properties": { "type": { "const": "string" } }
            },
            "then": {
              "properties": {
                "value": {
                  "type": [ "string", "null" ]
                }
              }
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "int" } }
            },
            "then": {
              "properties": {
                "value": {
                  "type": [ "string", "null" ],
                  "pattern": "^-?\\d*$" // 整数もしくは空を許可
                }
              }
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "date" } }
            },
            "then": {
              "properties": {
                "value": {
                  "type": [ "string", "null" ],
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$" // 日付フォーマット（YYYY-MM-DD）
                }
              }
            }
          }
        ]
      }
    }
  },
  "required": [ "AttributeValues" ]
}
