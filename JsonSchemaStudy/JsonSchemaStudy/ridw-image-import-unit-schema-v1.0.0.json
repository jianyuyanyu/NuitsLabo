{
  "$schema": "https://www.ricoh.co.jp/schemas/ridw/image-importer/unit/1.0.0",
  "type": "object",
  "properties": {
    "AttributeValues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [ "string", "int", "date" ]
          },
          "stringValue": {
            "type": "string"
          },
          "intValue": {
            "type": "integer"
          },
          "dateValue": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "required": [ "name", "type" ],
        "allOf": [
          {
            "if": {
              "properties": { "type": { "const": "string" } }
            },
            "then": {
              "required": [ "stringValue" ],
              "properties": {
                "intValue": { "not": {} },
                "dateValue": { "not": {} }
              }
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "int" } }
            },
            "then": {
              "required": [ "intValue" ],
              "properties": {
                "stringValue": { "not": {} },
                "dateValue": { "not": {} }
              }
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "date" } }
            },
            "then": {
              "required": [ "dateValue" ],
              "properties": {
                "stringValue": { "not": {} },
                "intValue": { "not": {} }
              }
            }
          }
        ]
      }
    }
  },
  "required": [ "AttributeValues" ]
}
